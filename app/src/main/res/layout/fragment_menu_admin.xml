<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AzulClaroModoNoche">


    <ImageView
        android:id="@+id/bt_multimedia"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="28dp"
        android:src="@drawable/ic_multimedia"
        app:layout_constraintBottom_toTopOf="@+id/bt_ayuda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt_reserva"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bt_busqueda"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_busqueda"
        app:layout_constraintEnd_toStartOf="@+id/bt_ayuda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_reserva" />

    <ImageView
        android:id="@+id/bt_ayuda"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="28dp"
        android:src="@drawable/ic_ayuda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt_busqueda"
        app:layout_constraintTop_toBottomOf="@+id/bt_multimedia" />

    <ImageView
        android:id="@+id/bt_reserva"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_reserva"
        app:layout_constraintBottom_toTopOf="@+id/bt_busqueda"
        app:layout_constraintEnd_toStartOf="@+id/bt_multimedia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bt_admin"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_admin_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_busqueda" />
</androidx.constraintlayout.widget.ConstraintLayout>